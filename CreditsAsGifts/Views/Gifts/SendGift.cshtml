@using CreditsAsGifts.Models.Gifts
@model GiftSendInputModel
@inject CreditsAsGifts.Services.Gifts.IGiftsService GiftsService

@{
    ViewData["Title"] = "Send Gift";

    var currentCredits = await GiftsService.GetUserCurrentCreditsAsync(this.User.GetId());
}

<h1 class="text-center">@ViewData["Title"]</h1>

<div class="row justify-content-center">
    <div class="col-md-8">
        <form asp-action="SendGift" method="post">
            <h4>Send credits to the person you want.</h4>
            <hr />
            <div class="form-group">
                <label asp-for="PhoneNumber"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberOfCredits"></label>
                <input value="1" min="1" max="@currentCredits" asp-for="NumberOfCredits" class="form-control" />
                <span asp-validation-for="NumberOfCredits" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Message"></label>
                <textarea asp-for="Message" class="form-control"></textarea>
                <span asp-validation-for="Message" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Send</button>
        </form>
    </div>
</div>

@section Scripts{
    <script src="/lib/tinymce/tinymce.min.js" type="text/javascript"></script>
    <script type="text/javascript">
        tinymce.init({
            selector: "textarea",
            plugins: [
                "image paste table link code media"
            ]
        });
    </script>
}